<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/andriod_bg"
    tools:context=".Register">

    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="0dp"
        android:src="@drawable/platewatch_mod_short" />

    <TextView
        android:id="@+id/signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="48dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="201dp"
        android:text="SIGN UP"
        android:textColor="#000"
        android:textSize="35sp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="1000dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="190dp"
        android:layout_below="@+id/signup"
        android:textColor="@color/white"
        android:textColorHint="#D8D4D4"
        android:textSize="22dp"
        android:padding="10dp"
        android:inputType="textEmailAddress"
        android:hint="Email" />

    <EditText
        android:id="@+id/numberplate"
        android:layout_width="1000dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/email"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:textColorHint="#D8D4D4"
        android:padding="10dp"
        android:inputType="text"
        android:hint="Number Plate" />
    <EditText
        android:id="@+id/phone"
        android:layout_width="1000dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/numberplate"
        android:textColor="@color/white"
        android:padding="10dp"
        android:textSize="22dp"
        android:inputType="phone"
        android:textColorHint="#D8D4D4"
        android:hint="Phone Number" />
    <Button
        android:id="@+id/regButton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Register"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/phone"
        android:padding="5dp"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/already"
        android:layout_width="1000dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/regButton"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:text="Already have an account ? Log In"
        android:textAlignment="center"
        android:textColorHint="#D8D4D4" />
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/already"
        />
</RelativeLayout>