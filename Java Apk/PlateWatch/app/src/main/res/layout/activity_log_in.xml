<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/android_bg_login_n"
tools:context=".LogIn">

    <EditText
    android:id="@+id/email"
    android:layout_width="1000dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="260dp"
    android:textColor="@color/white"
    android:textColorHint="#D8D4D4"
    android:textSize="22sp"
    android:padding="10dp"
    android:inputType="textEmailAddress"
    android:hint="Email" />

<EditText
    android:id="@+id/numberplate"
    android:layout_width="1000dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="20dp"
    android:layout_below="@+id/email"
    android:textColor="@color/white"
    android:textSize="22sp"
    android:textColorHint="#D8D4D4"
    android:padding="10dp"
    android:inputType="text"
    android:hint="Number Plate" />
<EditText
    android:id="@+id/psd"
    android:layout_width="1000dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="20dp"
    android:layout_below="@+id/numberplate"
    android:textColor="@color/white"
    android:padding="10dp"
    android:textSize="22sp"
    android:inputType="textPassword"
    android:textColorHint="#D8D4D4"
    android:hint="Password" />
<Button
    android:id="@+id/login"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:text="Log In"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="20dp"
    android:layout_below="@+id/psd"
    android:padding="5dp"
    android:textSize="20sp"/>

<TextView
    android:id="@+id/already"
    android:layout_width="1000dp"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="20dp"
    android:layout_below="@+id/login"
    android:textColor="@color/white"
    android:textSize="22sp"
    android:text="Don't have an account ? Sign Up"
    android:textAlignment="center"
    android:textColorHint="#D8D4D4" />
<ProgressBar
    android:id="@+id/progressBar"
    style="?android:attr/progressBarStyle"
    android:layout_centerHorizontal="true"
    android:visibility="invisible"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_below="@+id/already"
    />
</RelativeLayout>